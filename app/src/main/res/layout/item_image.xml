<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="@dimen/default_elevation"
    android:layout_marginBottom="@dimen/default_elevation"
    app:cardCornerRadius="@dimen/default_elevation"
    app:cardBackgroundColor="@color/design_default_color_primary"
    >

    <ImageView
        android:id="@+id/iv_machine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@tools:sample/backgrounds/scenic"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:id="@+id/btn_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_cancel_24"
        android:layout_gravity="top|end"
        android:contentDescription="@string/content_delete_image"
        />


</androidx.cardview.widget.CardView>